{% extends 'SiriuxWebeditBundle:Admin/Template:__section.html.twig' %}

{% block subtitle %}New{% endblock %}

{% block body %}
<form action="{{ path('template_create') }}" method="post">
<article class="module width_full">
    <header><h3>Add new template</h3></header>
    <div class="module_content">
            {{ form_widget(form) }}
    </div>
    <footer>
        <div class="submit_link">
            <input type="submit" value="Create" class="alt_btn" />
            or <a href="{{ path('templates') }}">Cancel</a>
        </div>
    </footer>
</article>
</form>
{% endblock %}
