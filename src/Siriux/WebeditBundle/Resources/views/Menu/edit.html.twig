{% extends '::user.html.twig' %}

{% block body %}   

<article class="module width_full">   
    <header><h3>Menus</h3></header> 
    <div class="module_content">
        <h3>Menu List</h3>   
        <ul class="toggle">    
            {% for menu in menus %}
                <li>Menu title: {{ menu.title }} - <a href="{{ path('item_edit', { 'menu_id' : menu.id }) }}">Edit</a> - <a href="{{ path('menu_delete', { 'id' : menu.id }) }}">Delete</a> </li>                
            {% endfor%}
            </ul> 
        <hr/><br/>
            <h3>Create new Menu</h3>
            <ul class="toggle">
                <form method="post" action="{{ path('menu_create') }}">
                    Title: <input type="text" name="m_title"/>
                    <input type="submit" value="Create"/><br/>
                </form>
            </ul>        
        </div>
    </article>    
{% endblock %}