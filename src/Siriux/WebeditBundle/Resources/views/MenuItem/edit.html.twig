{% extends '::user.html.twig' %}

{% block body %}   

<article class="module width_full">   
    <header><h3>Menu Itens</h3></header> 
    <div class="module_content">
        <h3>Menu {{ menu_id }}  - Itens List</h3>   
        <ul class="toggle">    
            {% for item in itens %}
                <li>Item title: {{ item.title }} | URL: {{ item.url }} | Weight: {{ item.weight }}   - <a href="#">Edit</a> - <a href="{{ path( 'item_delete', { 'menu_id' : menu_id , 'item_id' : item.id } ) }}">Delete</a> </li>                
            {% endfor%}
            </ul> 
        <hr/><br/>
            <h3>Create menu item</h3>
            <ul class="toggle">
                
                <form method="post" action="{{ path('item_create', { 'menu_id' : menu_id }) }}">
                    Title: <input type="text" name="i_title" id="i_title"/>
                    URL: <input type="text" name="i_url" id="i_url"/>
                    Weigth: <input type="text" name="i_weight" id="i_weight"/>
                    <input type="hidden" name="i_menu" id="i_menu" value="{{ itens }}">
                    <input type="submit" value="Create"/><br/>
                </form>
                    
            </ul>        
        </div>
    </article>    
{% endblock %}