{% extends 'SiriuxUserBundle:Admin:__section.html.twig' %}

{% form_theme form 'SiriuxAdminBundle:Form:fields.html.twig' %}

{% block subtitle %} New {% endblock %}

{% block body %}
<form id="user_update_form" action="{{ path('users_create') }}" method="post">
<article class="module width_full">
    <header><h3>Create new user</h3></header>
    <div class="module_content">
            {{ form_widget(form) }}
    </div>
    <footer>
        <div class="submit_link">
            <input type="submit" value="Create" class="alt_btn" />
            or <a href="{{ path('users') }}">Cancel</a>
        </div>
    </footer>
</article>
</form>
{% endblock %}
