{% extends 'SiriuxUserBundle::__section.html.twig' %}

{% block subtitle %}{{ 'change_password.submit'|trans }}{% endblock %}

{% block body %}
<article class="module width_full">
    <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
        <header><h3>{{ block('title') }}</h3></header>
        <div class="module_content">
                {{ form_widget(form) }}
        </div>
        <footer>
            <div class="submit_link">
                <input type="submit" value="{{ 'change_password.submit'|trans }}" class="alt_btn" />
                or <a href="{{ path('root') }}">Cancel</a>
            </div>
        </footer>
    </form>
</article>
{% endblock %}
